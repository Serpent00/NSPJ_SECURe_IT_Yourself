<Window x:Class="MainPage.Beck_Option"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainPage"
        mc:Ignorable="d"
        Title="Beck_Option1" Height="600" Width="900">


    <StackPanel Background="#39424D">
        <Border BorderBrush="Black" BorderThickness="1" Height="142">
            <DockPanel Background="#A9D0E5" Height="142" LastChildFill="False" >
                <Button Content="Back" Background="red" Foreground="white" Height="64" Opacity="0.6" VerticalAlignment="Top" Width="204" Margin="10 35 10 10" FontSize="20" Click="Button_Click" />
                <Label x:Name="lblMisconfigType" Content="Label" Height="142" VerticalAlignment="Top" Width="335" FontSize="40" FontWeight="Bold" FontStyle="Italic" RenderTransformOrigin="0.5,0.5" HorizontalContentAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Disabled" VerticalContentAlignment="Center" FontFamily="/MainPage;component/Fonts/#Renault BQ">
                    <Label.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform X="48"/>
                        </TransformGroup>
                    </Label.RenderTransform>
                </Label>
            </DockPanel>
        </Border>
        <StackPanel Height="393" Name="Option_EditPanel" Background="white" Margin="119,20,119.333,0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="655">
            <Grid Height="143" Margin="0,0,0.333,0">
                <Label x:Name="lblStatus" Content="Status: " HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="2.912,2.615" Margin="231,43,0,0" Height="40" MinWidth="80" FontFamily="Apex New Medium Italic" FontSize="20"/>
                <Image x:Name="StatusImage" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" RenderTransformOrigin="3.557,0.73" Margin="311,10,0,0"/>
            </Grid>

            <Border BorderBrush="Black" BorderThickness="1" Height="1" Margin="0,0,0.333,0"/>
            <!--<ScrollViewer x:Name="Scroller" HorizontalAlignment="Right" Height="240" Margin="0,0,-0.333,0" Grid.Row="1" VerticalAlignment="Top" Width="655">-->
            <StackPanel Name="Beck_Content" Height="240">
                <!--Port Check-->
                <DockPanel Name="PortCheckDP" Visibility="Collapsed">
                    <Label Content="Scan from port 1 ~ " Margin="60, 0, 0, 0" />
                    <TextBox Text="" Width="60" Name="SpecificPortRange" IsReadOnly="false" VerticalAlignment="Center" MaxLength="5" Margin="83,0,99,0" />
                    <Button Content="Check" Name="ActivateCheck" Margin="0, 0, 20, 0" Click="Check_Click"/>
                </DockPanel>
                <ScrollViewer Name="ReturnActCheckScroller" Visibility="Collapsed">
                    <TextBlock Name="ReturnActCheck" Text="" Visibility="Collapsed" MinHeight="60" Margin="65, 0, 0, 20" TextWrapping="WrapWithOverflow" RenderTransformOrigin="0.5,0.5"/>
                </ScrollViewer>
                <DockPanel Name="PortCheckDP2" Visibility="Collapsed">
                    <Label Content="Scan Specific Port:  " Margin="60, 0, 0, 0"/>
                    <TextBox Text="" Width="60" Name="SpecificPort" IsReadOnly="False" VerticalAlignment="Center" MaxLength="5" Margin="83,0,99.5,0"/>
                    <Button Content="Check" Name="ActivateCheck2" Click="Check_Click2" Margin="0, 0, 20, 0"/>
                </DockPanel>
                <TextBlock Name="ReturnActCheck2" Text="" Visibility="Collapsed" ScrollViewer.CanContentScroll="True" Margin="65, 0, 0, 20" TextWrapping="WrapWithOverflow" RenderTransformOrigin="0.5,0.5"/>
                <DockPanel Name="PortCheckDP3" Visibility="Collapsed">
                    <Label Content="Scan Ports from" Margin="60, 0, 0, 0"/>
                    <TextBox Text="" Width="60" Name="PortStart" IsReadOnly="False" VerticalAlignment="Center" MaxLength="5" Margin="103,0,0,0"/>
                    <Label Content=" ~ " Margin="0, 0, 0, 0"/>
                    <TextBox Text="" Width="60" Name="PortEnd" IsReadOnly="False" VerticalAlignment="Center" MaxLength="5" Margin="0, 0, 14.5, 0"/>
                    <Button Content="Check" Name="ActivateCheck3" Click="Check_Click3" Margin="0, 0, 20, 0"/>
                </DockPanel>
                <TextBlock Name="ReturnActCheck3" Text="" Visibility="Collapsed" ScrollViewer.CanContentScroll="True" Margin="65, 0, 0, 20" TextWrapping="WrapWithOverflow" RenderTransformOrigin="0.5,0.5"/>
                <DockPanel Name="PortCloseDP" Visibility="Collapsed">
                    <Label Content="Close Port" Margin="60, 0, 0, 0"/>
                    <TextBox Text="" Width="60" Name="PortToClose" IsReadOnly="False" VerticalAlignment="Center" MaxLength="5" Margin="132.5,0,99.5,0"/>
                    <Button Content="Confirm" Name="ActivateClose" Click="ClosePortRule_Click" Margin="0, 0, 20, 0"/>
                </DockPanel>
                <DockPanel Name="PortOpenDP" Visibility="Collapsed">
                    <Label Content="Open Ports you previously closed" Margin="60,0,0,0"></Label>
                    <TextBox Text="" Width="60" Name="PortToOpen" IsReadOnly="False" VerticalAlignment="Center" MaxLength="5" Margin="10,0,99.5,0"/>
                    <Button Content="Confirm" Name="ActivateOpen" Click="OpenPortRule_Click" Margin="0, 0, 20, 0"/>
                </DockPanel>
                <!--Proxy Check-->
                <DockPanel Name="ProxyDP" Visibility="Collapsed">
                    <Label Content="Proxy server service: " Margin="60,0,0,0"></Label>
                    <TextBox Text="" Width="213" Name="ProxyTxt" IsReadOnly="True" VerticalAlignment="Center" MaxLength="5" Margin="10,0" MinHeight="13" TextWrapping="WrapWithOverflow"/>
                </DockPanel>
                <!--Firewall Check-->
                <DockPanel Name="FirewallDP" Visibility="Collapsed" Margin="0,0,0,10">
                    <Label Content="Firewall On/Off: " Margin="60,0,0,0"></Label>
                    <ComboBox x:Name="FWOnOffCombo" Visibility="Visible" Margin="100,10,0,10" Width="50">
                        <ComboBoxItem>On</ComboBoxItem>
                        <ComboBoxItem>Off</ComboBoxItem>
                    </ComboBox>
                    <Button x:Name="FWApplyBtn" Width="96" Margin="20,5,0,0" Content="Apply" Click="FWApplyBtn_Click"></Button>
                </DockPanel>
                <ScrollViewer x:Name="ScrollFW" HorizontalAlignment="Right" Height="240" Margin="0,0,-0.333,0" Grid.Row="1" VerticalAlignment="Top" Width="655">
                    <TextBox Text="" Width="522" Name="FirewallStat" VerticalAlignment="Center" MaxLength="5" Margin="10,0" MinHeight="13" TextWrapping="WrapWithOverflow" IsReadOnly="True"/>
                </ScrollViewer>
                <!--ICMP Check-->
                <TextBlock Name="DisplayIPInfo" IsEnabled="False" Width="487" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Top" Visibility="Collapsed"/>
                <DockPanel Name="ICMPDP" Visibility="Collapsed" Margin="10,0,10,10">
                    <Label Content="ICMP Echo of/off: " Margin="60,0,0,10"  HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center"></Label>
                    <StackPanel>
                        <DockPanel MinHeight="20" Margin="10,0,0,10">
                        <DockPanel>
                            <ComboBox x:Name="ICMPOnOffCombo" Visibility="Visible" Margin="100,10,0,10" Width="50">
                                <ComboBoxItem>On</ComboBoxItem>
                                <ComboBoxItem>Off</ComboBoxItem>
                            </ComboBox>
                        </DockPanel>
                            <Button x:Name="ICMPEditApplyBtn" Width="96" Margin="20,5,0,0" Content="Apply" Click="ICMPEditApplyBtn_Click"></Button>
                        </DockPanel>
                        <TextBox Text="" Width="450" Name="ICMPTxt" IsReadOnly="True" VerticalAlignment="Center" MaxLength="5" Margin="0,0" MinHeight="13" TextWrapping="WrapWithOverflow" Visibility="Collapsed"/>
                    </StackPanel>
                </DockPanel>
                <!--Update Check-->
                    
                <!--Vunerability Scanner-->
            </StackPanel>
        <Border BorderBrush="Black" BorderThickness="1" Height="19" Margin="-9,0,-6.333,0" RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Border.RenderTransform>
            </Border>
        </StackPanel>

    </StackPanel>
</Window>
